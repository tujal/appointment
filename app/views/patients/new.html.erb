<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body class="bg">
<%= render "doctors/nav" %>
<div class="container bg-white" style="width:50% ;height: auto; margin-top:10px">
<h3 class="text-center"> Add New Patient</h3>
<%= form_with model: @patient do | form | %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name, class:"form-control" %>
        <% @patient.errors.full_messages_for(:name).each do | message | %>
            <small class="text-danger"> <%= message %></small>
             <% end %>
    </div>
    <div>
        <%= form.label :age %>
        <%= form.text_field :age, class:"form-control" %>
        <% @patient.errors.full_messages_for(:age).each do | message | %>
            <small class="text-danger"> <%= message %></small>
             <% end %>
    </div>
    <div>
        <%= form.label :gender %> &nbsp
        <%= form.radio_button :gender,"male" %>
        <%= form.label :gender, "Male" %>
        <%= form.radio_button :gender,"Female" %>
        <%= form.label :gender, "Female" %>
        <% @patient.errors.full_messages_for(:gender).each do | message | %>
            <small class="text-danger"> <%= message %></small>
             <% end %>
    </div>
    <h4> Appointment details :- </h4>
    <%= form.fields_for :appointments do | app_form | %>
        <div>
        <%= app_form.label :appointment_date %>
        <%= app_form.datetime_field :appointment_date , class:"form-control"%>
        </div><br>
        <div>
        <%= app_form.label :doctor_id %>
        <%= app_form.collection_select :doctor_id, Doctor.all, :id, :name%>
        </div>
        <% end %>
    <div>
         <%= form.submit class:"btn btn-success btn-sm"%>
         <%= link_to "Bank", root_path, class:"btn btn-outline-primary btn-sm"%>
    </div>  
    <% end %>
 

</div>
   
</body>
</html>